    <style>
        .ground-highlight-images {
            display: flex;
            /* Use flexbox to align images horizontally */
            flex-wrap: wrap;
            /* Allow images to wrap to the next row on smaller screens */
            justify-content: space-between;
            /* Distribute images evenly across the row */
        }

        .ground-highlight-images img {
            width: 400px;
            /* Set a fixed width for all images */
            height: 400px;
            /* Set a fixed height for all images */
            object-fit: cover;
            /* Ensure the images fit within the fixed dimensions */
            margin: 10px;
            /* Add some margin to separate the images */
            align-items: center;
        }
        .content {
            display: flex;
            align-content: center;
            justify-content: center;
        }
        

    
        .letter {
            text-transform: uppercase;
            background-color: #fff;
            background-clip: text;
            text-fill-color: transparent;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            display: inline-block;
            font-size: 50px;
            opacity: 0;
            animation: letter-fade-in 2.5s forwards;
            font-weight: bold;
            font-family: bungee, sans-serif;
            letter-spacing: 1px;
        }
        @keyframes letter-fade-in {
            to {
                opacity: 1;
            }
        }

        @media (max-width: 768px) {
            .ground-highlight-images {
                flex-direction: column;
                /* Change to a column layout on mobile screens */
                align-items: center;

            }

            .ground-highlight-images img {
                width: 400px;
                
                /* Set a fixed width for all images */
            }
            
        }
        @media (max-width: 420px) {
            .ground-highlight-images img {
                width: 300px;
                height: 250px;
                
            }
        }
       
    </style>
</head>

